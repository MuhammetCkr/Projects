@model List<Food>

<h1 class="display-5 text-primary">Food List</h1>
<hr />
<div>
    <a class="btn btn-sm btn-primary" asp-controller="Admin" asp-action="FoodCreate">Create Food</a>
    <a class="btn btn-sm btn-success" asp-controller="Admin" asp-action="FoodUnList">Food Unlist</a>
</div>
<hr />
@if (Model.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Image</th>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Is Home</th>
                <th scope="col">Is Approved</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var food in Model)
            {
                <tr>
                    <td><img src="~/web/images/food_images/@food.FoodImage" width="100" height="100" style="object-fit:cover" /></td>
                    <td>@food.FoodId</td>
                    <td>@food.FoodName</td>
                    <td>@food.FoodHome</td>
                    <td>@food.FoodApproved</td>
                    <td><a class="btn btn-warning" asp-controller="Admin" asp-action="FoodEdit" asp-route-id=@food.FoodId>Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
}
