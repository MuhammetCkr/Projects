@model List<Food>


<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Image</th>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var food in Model)
        {
            <tr>
                <td><img src="~/web/images/food_images/@food.FoodImage" width="100" height="100" style="object-fit:cover"/></td>
                <td>@food.FoodId</td>
                <td>@food.FoodName</td>
                <td><a class="btn btn-warning" asp-controller="Food" asp-action="Details" asp-route-id=@food.FoodId>Details</a></td>
            </tr>
        }
    </tbody>
</table>


