@{
    ViewData["Title"] = "Home Page";
}

@model List<Product>

<div class="row">
    <div>
        @if (Model.Count==0)
        {
            @await Html.PartialAsync("_NoProduct");
        }
        else
        {
            <div class="row">
                @foreach (var product in Model)
                {
                    @await Html.PartialAsync("_Product",product);
                }
            </div>
        }
    </div>
</div>